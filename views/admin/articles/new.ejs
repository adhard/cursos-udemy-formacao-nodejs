<%- include('../../partials/header.ejs') %>
<body>
    <%- include('../../partials/navbar.ejs') %>
    <div class="container">
        <hr>
        <div class="card">
            <div class="card-header">
                <h2>Novo artigo</h2>
            </div>
            <div class="card-body">
                <form action="/articles/save" method="POST">
                    <div class="form-group">
                        <input type="text" name="title" placeholder="Define o titulo do artigo" class="form-control">
                    </div>
                    <div class="form-group">
                        <textarea name="body" id="article" cols="30" rows="10" class="form-control" placeholder="Escreva o artigo aqui"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="categories">Categorias</label>
                        <select class="form-control" id="categories" name="category">
                            <% categories.forEach(category => { %>
                                <option value="<%= category.id %>"><%= category.title %></option>
                            <% }) %>
                        </select>
                      </div>
                    <button class="btn btn-success">Cadastrar</button>
                </form>
            </div>
        </div>
    </div>
</body>

<%- include('../../partials/footer.ejs') %>
<script src="/tinymce/tinymce.min.js"></script>
<script>

    tinymce.init({
        selector: "#article",
        plugins: [
            'advlist autolink link image lists print preview hr searchreplace wordcount fullscreen insertdatetime media save table paste emoticons'
        ]
    })

</script>